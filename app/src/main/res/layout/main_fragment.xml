<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:weightSum="8"
    android:background="#ff000000">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff000000">




        <ImageView
            android:id="@+id/bg"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center"
            android:src="@drawable/bg_color" />

        <ImageView
            android:id="@+id/waveform"
            android:layout_width="@dimen/waveform_size"
            android:layout_height="@dimen/waveform_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_waveform" />

        <ImageView
            android:id="@+id/waveform_on"
            android:layout_width="@dimen/waveform_size"
            android:layout_height="@dimen/waveform_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_waveform_on"
            android:alpha="0" />



    </FrameLayout>

</LinearLayout>

